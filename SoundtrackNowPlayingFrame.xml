<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
  <Script>
    function SetNowPlayingText(title, artist, album)
		if (Soundtrack.Settings.ShowTrackInformation) then
			TrackTextString:SetText(title);
			AlbumTextString:SetText(album);
			ArtistTextString:SetText(artist);
			TrackTextBG1:SetText("|cff444444"..title);
			AlbumTextBG1:SetText("|cff444444"..album);
			ArtistTextBG1:SetText("|cff444444"..artist);
			if UIFrameIsFading(NowPlayingTextFrame) then
				UIFrameFlashRemoveFrame(NowPlayingTextFrame);
				NowPlayingTextFrame:SetAlpha(1);
			end 
			UIFrameFlash(NowPlayingTextFrame, 1, 1, 10, false, 8, 0);
			-- FadingFrame_Show();
		end
    end
  </Script>
  <!-- These frames are shown when the current track changes -->
  <Frame name="NowPlayingTextFrame" movable="true" enableMouse="true" parent="UIParent" frameStrata="LOW" toplevel="true">
      <TitleRegion>
          <Size>
              <AbsDimension x="100" y="20" />
          </Size>
          <Anchors>
              <Anchor point="TOPLEFT" />
          </Anchors>
      </TitleRegion>
    <Anchors>
      <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" />
    </Anchors>
    <Size>
      <RelDimension x="0.25" y="0.10"/>
    </Size>
    <Layers>
      <Layer level="ARTWORK">
	  
		<FontString name="TrackTextBG1" inherits="GameTooltipHeaderText">
          <Size>
            <RelDimension x="0.5" y="0"/>
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT">
				<Offset>
                    <AbsDimension x="1" y="-1"/>
                </Offset>
			</Anchor>
          </Anchors>
        </FontString>
        <FontString name="TrackTextString" inherits="GameTooltipHeaderText">
          <Size>
            <RelDimension x="0.5" y="0"/>
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPLEFT"/>
          </Anchors>
        </FontString>
		
		<FontString name="ArtistTextBG1" inherits="GameTooltipText">
          <Size>
            <RelDimension x="0.5" y="0"/>
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT" relativeTo="TrackTextString" relativePoint="BOTTOMLEFT">
				<Offset>
                    <AbsDimension x="1" y="-1"/>
                </Offset>
			</Anchor>
          </Anchors>
        </FontString>
        <FontString name="ArtistTextString" inherits="GameTooltipText">
          <Size>
            <RelDimension x="0.5" y="0"/>
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT" relativeTo="TrackTextString" relativePoint="BOTTOMLEFT"/>
          </Anchors>
        </FontString>
		
		<FontString name="AlbumTextBG1" inherits="GameTooltipText">
          <Size>
            <RelDimension x="0.5" y="0"/>
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT" relativeTo="ArtistTextString" relativePoint="BOTTOMLEFT">
				<Offset>
                    <AbsDimension x="1" y="-1"/>
                </Offset>
			</Anchor>
          </Anchors>
        </FontString>
        <FontString name="AlbumTextString" inherits="GameTooltipText">
          <Size>
            <RelDimension x="0.5" y="0"/>
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT" relativeTo="ArtistTextString" relativePoint="BOTTOMLEFT"/>
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Scripts>
      <OnLoad>
      </OnLoad>
      <OnEvent>
      </OnEvent>
    </Scripts>
  </Frame>
</Ui>
