<Bindings>
    <Binding name="Toggle soundtrack window" header="SOUNDTRACK">
        SoundtrackFrame_Toggle();
    </Binding>
    <Binding name="Play/Pause track">
        Soundtrack.Events.PlaybackPlayStop();
    </Binding>
    <Binding name="Next track">
        Soundtrack.Events.PlaybackNext();
    </Binding>
    <Binding name="Previous track">
        Soundtrack.Events.PlaybackPrevious();
    </Binding>
	<Binding name="Stop track">
		Soundtrack.Events.PlaybackTrueStop();
	</Binding>
</Bindings>